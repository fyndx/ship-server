DATABASE_URL="postgres-db-url"
BETTER_AUTH_SECRET=your_secret_key_here_32_characters_min
BETTER_AUTH_URL=http://localhost:3000 #Base URL of your app

# Email Service Configuration
# Choose one: nodemailer, resend, plunk, smtp
EMAIL_PROVIDER=resend

# Resend Configuration
RESEND_API_KEY=your_resend_api_key_here

# Plunk Configuration
PLUNK_API_KEY=your_plunk_api_key_here

# SMTP Configuration (for Nodemailer SMTP or generic SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Nodemailer Configuration (for other providers like Gmail OAuth, etc.)
NODEMAILER_SERVICE=gmail
NODEMAILER_USER=your_email@gmail.com
NODEMAILER_PASS=your_app_password

# Default sender configuration
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Your App Name
